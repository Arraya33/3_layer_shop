@model ProductListPageViewModel

<h2>Товары</h2>


<table class="table">
    <tr>
        <th>Id</th>
        <th>Изображение</th>
        <th>Наименование</th>
        <th>ЧПУ</th>
        <th></th>
    </tr>
    @if (Model.Products != null)
    {
        foreach (ProductPageViewModel product in Model.Products)
        {
            <tr>
                <td>@product.Id</td>
                <td><img width="100" height="100" src="@product.MainImage.Path" /></td>
                <td>@product.Name</td>
                <td>@product.Alias</td>
                <td>
                    <form asp-action="DeleteProduct" asp-route-productId="@product.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="EditProduct" asp-route-productId="@product.Id">Изменить</a>
                        <button type="submit" class="btn btn-sm btn-danger">
                            Удалить
                        </button>
                    </form>                    
                </td>
            </tr>
        }
    }
</table>

@if (Model.PagingInfo != null)
{
    <div class="product_pagination" page-model="Model.PagingInfo"></div>
}

<div class="text-center">
    <a asp-action="CreateProduct" class="btn btn-primary">Добавить</a>
</div>