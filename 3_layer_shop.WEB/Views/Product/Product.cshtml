@model ProductViewModel
<!-- Home -->

<div class="home">
    <partial name="Partials/Banners/SingleBanner2Partial" />
</div>

<!-- Product Details -->

<div class="product_details">
    <div class="container">
        <div class="row details_row">

            <!-- Product Image -->
            <div class="col-lg-6">
                <div class="details_image">
                    <div class="details_image_large">
                        <img src="@Model.MainImage" alt="@Model.Name">
                        @if (Model.DiscountPrice > 0)
                        {
                            <div class="product_extra product_new"><a href="categories.html">New</a></div>
                        }
                    </div>
                    <div class="details_image_thumbnails d-flex flex-row align-items-start justify-content-between">
                        <div class="details_image_thumbnail active" data-image="@Model.MainImage"><img src="@Model.MainImage" alt="@Model.Name"></div>
                        @foreach (string image in Model.Images)
                        {
                            <div class="details_image_thumbnail" data-image="@image"><img src="@image" alt="@Model.Name"></div>
                        }
                    </div>
                </div>
            </div>

            <!-- Product Content -->
            <div class="col-lg-6">
                <div class="details_content">
                    <div class="details_name">@Model.Name</div>

                    @if (Model.DiscountPrice > 0)
                    {
                        <div class="details_discount">$@Model.Price</div>
                        <div class="details_price">$@Model.DiscountPrice</div>
                    }
                    else
                    {
                        <div class="details_price">$@Model.Price</div>
                    }

                    <!-- In Stock -->
                <div class="in_stock_container">
                    <div class="availability">Availability:</div>
                    @if (Model.Quantity > 0)
                    {
                        <span>In Stock</span>
                    }
                    else
                    {
                        <span>Sold Out</span>
                    }

                </div>
                    <div class="details_text">
                        @Html.Raw(Model.IntroText)
                    </div>

                    <!-- Product Quantity -->
                    <div class="product_quantity_container">
                        <div class="product_quantity clearfix">
                            <span>Qty</span>
                            <input id="quantity_input" type="text" pattern="[0-9]*" value="1">
                            <div class="quantity_buttons">
                                <div id="quantity_inc_button" class="quantity_inc quantity_control"><i class="fa fa-chevron-up" aria-hidden="true"></i></div>
                                <div id="quantity_dec_button" class="quantity_dec quantity_control"><i class="fa fa-chevron-down" aria-hidden="true"></i></div>
                            </div>
                        </div>
                        <div class="button cart_button"><a href="#">Add to cart</a></div>
                    </div>

                    <!-- Share -->
                    <div class="details_share">
                        <span>Share:</span>
                        <partial name="Partials/Icons/SocialIconsPartial" />
                    </div>
                </div>
            </div>
        </div>

        <div class="row description_row">
            <div class="col">
                <div class="description_title_container">
                    <div class="description_title">Description</div>
                </div>
                <div class="description_text">
                    @Html.Raw(Model.Description)
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Products -->
<vc:related-products products=@Model.RelatedProducts />

<!-- Newsletter -->
<partial name="Partials/Forms/NewsletterFormPartial" />

@section Styles {
    <link rel="stylesheet" type="text/css" href="~/styles/product.css">
    <link rel="stylesheet" type="text/css" href="~/styles/product_responsive.css">
}

@section Scripts {
    <script src="~/js/product.js"></script>
}